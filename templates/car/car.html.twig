{% extends 'base.html.twig' %} 
{% block title %}Hello MyCars!{% endblock %} 
{% block body %}
    <div class="container">
        <div class="row mt-5 mb-5">
        {% for car in car %}
        <div class="card m-3" style="width: 18rem; box-shadow: 1px 1px 1px">
            <div class="card-body">
            <h5 class="card-title">{{ car.marque }} {{ car.modele }}</h5>
            <img src="{{ asset('divers/images/' ~ car.image) }}" class="card-img-top" alt="image voiture" />
            <p class="card-text">{{ car.immat }}</p>
            <p class="card-text">{{ car.mec }}</p>
            <p class="card-text">{{ car.puissance }}cv</p>
            <p class="card-text">{{ car.carburant }}</p>
            <a href="{{ path('redirection_route') }}" class="btn btn-primary">Révisions</a>
            <a href="#" class="btn btn-secondary">Réparations</a>
            </div>
        </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}